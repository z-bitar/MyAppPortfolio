<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/main_activity_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_spotify_streamer"
        style="@style/btn_style"
        android:text="@string/spotify_streamer" />

    <Button
        android:id="@+id/btn_scores_app"
        style="@style/btn_style"
        android:text="@string/scores_app" />

    <Button
        android:id="@+id/btn_library_app"
        style="@style/btn_style"
        android:text="@string/library_app" />

    <Button
        android:id="@+id/btn_build_it_bigger"
        style="@style/btn_style"
        android:text="@string/build_it_bigger" />

    <Button
        android:id="@+id/btn_bacon_reader"
        style="@style/btn_style"
        android:text="@string/bacon_reader" />

    <Button
        android:id="@+id/btn_capstone"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_capstone"
        android:text="@string/capstone"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>
